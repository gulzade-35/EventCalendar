@model List<EventCalendar.Entities.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Etkinlik Takvimi</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h4 class="card-title">Sürüklenebilir Kategoriler</h4>
                        </div>
                        <div class="card-body">
                            <div id="external-events">
                                <div class="text-muted">Kategoriler yükleniyor...</div>
                            </div>
                        </div>
                    </div>
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Etkinlik Ekle</h3>
                        </div>
                        <div class="card-body">
                            <div class="btn-group" style="width: 100%; margin-bottom: 10px;">
                                <ul class="fc-color-picker" id="color-chooser" style="list-style: none; display: flex; gap: 10px; padding: 0;">
                                    <li><a class="text-primary color-opt" href="javascript:void(0);" data-color="bg-primary"><i class="fas fa-square" style="font-size: 25px;"></i></a></li>
                                    <li><a class="text-warning color-opt" href="javascript:void(0);" data-color="bg-warning"><i class="fas fa-square" style="font-size: 25px;"></i></a></li>
                                    <li><a class="text-success color-opt" href="javascript:void(0);" data-color="bg-success"><i class="fas fa-square" style="font-size: 25px;"></i></a></li>
                                    <li><a class="text-danger color-opt" href="javascript:void(0);" data-color="bg-danger"><i class="fas fa-square" style="font-size: 25px;"></i></a></li>
                                    <li><a class="text-info color-opt" href="javascript:void(0);" data-color="bg-info"><i class="fas fa-square" style="font-size: 25px;"></i></a></li>
                                </ul>
                            </div>

                            <input type="hidden" id="selected-color-value" value="bg-primary">

                            <div class="input-group">
                                <input id="new-category-name" type="text" class="form-control" placeholder="Kategori Adı">
                                <div class="input-group-append">
                                    <button id="add-new-category" type="button" class="btn btn-primary">Ekle</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-md-9">
                    <div class="card card-primary">
                        <div class="card-body p-0">
                            <div id="calendar"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="modal fade" id="eventModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Etkinlik Detayı</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="modalEventId" />
                    <div class="form-group">
                        <label>Etkinlik Adı</label>
                        <input type="text" id="modalEventTitle" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Başlangıç Tarihi</label>
                        <input type="text" id="modalEventDate" class="form-control" readonly />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="btnDeleteEvent">Sil</button>
                    <button type="button" class="btn btn-primary" id="btnUpdateEvent">Güncelle</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
</div>